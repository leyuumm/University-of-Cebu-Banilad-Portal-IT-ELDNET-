<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - University of Cebu</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/StudentPortal.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="container-fluid" style="background-color: rgb(7, 7, 44);">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm" style="background-color: rgb(7, 7, 44); border-bottom: none;">
            <img src="~/images/uc_logo.png" class="uc-navlogo" />
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">University of Cebu - Banilad</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" id="navbarDropDownStudents" role="button" data-bs-toggle="dropdown" aria-expanded="false" asp-area=""
                               asp-controller="Home" asp-action="Privacy">Enrollment</a>

                            <ul class="dropdown-menu" aria-labelledby="navbarDropDown">
                                <li><a class="dropdown-item" asp-controller="StudentEnrollment" asp-action="Add">Student's Enrollment Entry</a></li>
                                <li><a class="dropdown-item" asp-controller="StudentEnrollment" asp-action="List">Student's Enrollment List</a></li>
                                <li><a class="dropdown-item" asp-controller="Home" asp-action="Privacy" asp-route-id="1">Enrollment & Requirements</a></li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" id="navbarDropDownStudents" role="button" data-bs-toggle="dropdown" aria-expanded="false" asp-area="" 
                            asp-controller="Students" asp-action="List">Students</a>

                            <ul class="dropdown-menu" aria-labelledby="navbarDropDown">
                                <li><a class="dropdown-item" asp-controller="Students" asp-action="Add">Student's Entry</a></li>
                                <li><a class="dropdown-item" asp-controller="Students" asp-action="List" asp-route-id="1">List of Students</a></li>
                            </ul>  
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" id="navbarDropDownSubjects" role="button" data-bs-toggle="dropdown" aria-expanded="false" asp-area=""
                               asp-controller="Students" asp-action="List">Subjects</a>

                            <ul class="dropdown-menu" aria-labelledby="navbarDropDown">
                                <li><a class="dropdown-item" asp-controller="SubjectEntry" asp-action="Add">Subject Entry</a></li>
                                <li><a class="dropdown-item" asp-controller="SubjectEntry" asp-action="List" asp-route-id="1">List of Subjects</a></li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" id="navbarDropDownStudents" role="button" data-bs-toggle="dropdown" aria-expanded="false" asp-area=""
                               asp-controller="Schedule" asp-action="List">Schedules</a>

                            <ul class="dropdown-menu" aria-labelledby="navbarDropDown">
                                <li><a class="dropdown-item" asp-controller="Schedules" asp-action="Add">Schedule Entry</a></li>
                                <li><a class="dropdown-item" asp-controller="Schedules" asp-action="List" asp-route-id="1">List of Schedules</a></li>
                            </ul>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="About">About</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main> 
    </div>

    <footer class="border-top footer text-muted">
        <div class="footertext">
            &copy; 2024 - University of Cebu - Banilad Campus | Programmed by Lliam Khenzo Monleon & Gwyneth Baluran - <a asp-area="" asp-controller="Home" asp-action="About">About</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
